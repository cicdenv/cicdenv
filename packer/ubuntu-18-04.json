{
  "description": "ubuntu base image for CI/CD environment",
  "variables": {
    "vpc_id": null,
    "subnet_id": null,
    "key_id": null,
    "accounts": null,
    "apt_repo_bucket": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-west-2",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "c5.large",
      "associate_public_ip_address": true,
      "ssh_username": "ubuntu",
      "ssh_interface": "public_ip",
      "ssh_timeout": "2m",
      "ami_name": "base/hvm-ssd/ubuntu-bionic-18.04-amd64-server-{{ isotime | clean_resource_name }}",
      "ami_description": "https://github.com/vogtech/cicdenv/terraform/packer/ubuntu.json",
      "snapshot_users": "{{user `accounts`}}",
      "ami_users": "{{user `accounts`}}",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "io1",
          "volume_size": 50,
          "iops": 2500,
          "delete_on_termination": true
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "io1",
          "volume_size": 50,
          "iops": 2500,
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline":[
        "mkdir /tmp/scripts"
      ]
    },
    {
      "type": "file",
      "source": "files/ebsnvme-id.py",
      "destination": "/tmp/scripts/"
    },
    {
      "type": "file",
      "source": "files/list-ephemeral-devices.sh",
      "destination": "/tmp/scripts/"
    },
    {
      "type": "file",
      "source": "files/mount-all-ephemeral-devices.sh",
      "destination": "/tmp/scripts/"
    },
    {
      "type": "shell",
      "inline":[
        "sudo chmod +x /tmp/scripts/*",
        "sudo cp /tmp/scripts/* /usr/local/bin"
      ]
    },
    {
      "type": "file",
      "source": "files/packages.txt",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "script": "scripts/setup.sh"
    },
    {
      "type": "file",
      "source": "files/apt-transport-s3.py",
      "destination": "/tmp/scripts/s3"
    },
    {
      "type": "shell",
      "inline":[
        "sudo cp /tmp/scripts/s3 /usr/lib/apt/methods/s3",
        "sudo chmod +x /usr/lib/apt/methods/s3",
        "sudo su -c \"echo 'deb [trusted=yes] s3://apt-repo-cicdenv-com/ repo/dists/' > /etc/apt/sources.list.d/s3-repos.list\""
      ]
    }
  ]
}
