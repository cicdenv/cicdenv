{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetBucketLocation",
        "s3:GetEncryptionConfiguration",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::${state_store}"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:Get*"
      ],
      "Resource": [
        "arn:aws:s3:::${state_store}/${cluster_fqdn}/addons/*",
        "arn:aws:s3:::${state_store}/${cluster_fqdn}/cluster.spec",
        "arn:aws:s3:::${state_store}/${cluster_fqdn}/config",
        "arn:aws:s3:::${state_store}/${cluster_fqdn}/instancegroup/*",
        "arn:aws:s3:::${state_store}/${cluster_fqdn}/pki/issued/*",
        "arn:aws:s3:::${state_store}/${cluster_fqdn}/pki/private/kube-proxy/*",
        "arn:aws:s3:::${state_store}/${cluster_fqdn}/pki/private/kubelet/*",
        "arn:aws:s3:::${state_store}/${cluster_fqdn}/pki/ssh/*",
        "arn:aws:s3:::${state_store}/${cluster_fqdn}/secrets/dockerconfig"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "kms:*"
      ],
      "Resource": "${state_key_arn}"
    }
  ]
}
